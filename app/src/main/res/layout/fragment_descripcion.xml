<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DescripcionFragment"
    android:orientation="vertical"
    android:background="#5F5D5D">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7D51D5"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="270sp"
        app:cardCornerRadius="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre mascota"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFC107"
            android:textStyle="bold"
            android:id="@+id/namePetDescripcion"></TextView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/imageViewPetDescripcion">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7D51D5"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        app:cardCornerRadius="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status : Available"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFC107"
            android:textStyle="bold"
            android:id="@+id/statusPetDescipcion"></TextView>
    </androidx.cardview.widget.CardView>


</LinearLayout>